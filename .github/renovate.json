{
  "extends": [
    ":preserveSemverRanges",
    "config:base",
    "docker:enableMajor",
    "github>balena-io/renovate-config//.github/renovate"
  ],
  "printConfig": true,
  "prHourlyLimit": 0,
  "onboarding": false,
  "requireConfig": false,
  "cloneSubmodules": true,
  "git-submodules": {
    "enabled": true
  },
  "automerge": false,
  "automergeType": "pr-comment",
  "automergeComment": "@balena-ci I self-certify!",
  "labels": [
    "renovate",
    "dependencies"
  ],
  "commitMessagePrefix": "Update",
  "commitMessageAction": "",
  "commitMessageTopic": "{{depName}} to {{{replace 'v' '' newVersion}}}",
  "commitMessageExtra": "Update {{depName}} from {{{replace 'v' '' currentVersion}}} to {{{replace 'v' '' newVersion}}}",
  "commitBody": "Change-type: {{#if (or isPatch (containsString depType 'devDependencies'))}}patch{{else}}minor{{/if}}",
  "prConcurrentLimit": 1,
  "branchConcurrentLimit": 1,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/suites/**",
    "**/__fixtures__/**",
    "**/Dockerfile.template"
  ],
  "repositories": [
    "balena-io/autohat",
    "balena-io/balena-alertmanager",
    "balena-io/balena-cloud",
    "balena-io/balena-mdns-publisher",
    "balena-io/balena-monitor",
    "balena-io/balena-sentry",
    "balena-io/ca-private",
    "balena-io/cert-manager",
    "balena-io/e2e",
    "balena-io/open-balena-api",
    "balena-io/open-balena-db",
    "balena-io/open-balena-haproxy",
    "balena-io/open-balena-registry",
    "balena-io/open-balena-s3",
    "balena-io/renovate-config",
    "balena-os/cloud-config",
    "balena-io/open-balena-vpn",
    "balenalabs/proxy-tunnel",
    "product-os/balena-jenkins"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "globby"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "git-submodules"
      ],
      "automerge": false,
      "automergeType": "pr-comment",
      "automergeComment": "@balena-ci I self-certify!"
    }
  ]
}
